{
  "title": "werewolf.world: Schema of play.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://werewolf.world/example/0.2/lobby/schema/client2server/play.json",
  "definitions": {},
  "type": "object",
  "properties": {
    "type": {
      "title": "Type",
      "description": "type",
      "$id": "/properties/type",
      "type": "string",
      "pattern": "^play$",
      "default": "play",
      "examples": [
        "play"
      ]
    },
    "token": {
      "title": "User Token",
      "description": "GUID",
      "$id": "/properties/token",
      "type": "string",
      "pattern": "^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$",
      "examples": [
        "3F2504E0-4F89-11D3-9A0C-0305E82C3301"
      ]
    },
    "villageId": {
      "title": "Village ID",
      "description": "village ID",
      "$id": "/properties/villageId",
      "type": "integer",
      "minimum": 0,
      "examples": [
        1
      ]
    }
  },
  "required": [
    "type",
    "token",
    "villageId"
  ]
}