{
    "title": "werewolf.world: Schema of boardMessage.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://werewolf.world/village/schema/0.3/allCharacters.json",
    "type": "object",
    "properties": {
        "@context": {
            "title": "@context",
            "description": "@context",
            "$id": "/properties/@context",
            "type": "string",
            "pattern": "^https://werewolf.world/village/context/0.3/character.jsonld$",
            "default": "https://werewolf.world/village/context/0.3/character.jsonld",
            "examples": [
                "https://werewolf.world/village/context/0.3/character.jsonld"
            ]
        },
        "@id": {
            "title": "@id",
            "description": "@id",
            "$id": "/properties/@id",
            "type": "string",
            "pattern": "^https://werewolf.world/resource/0.3/character$",
            "default": "https://werewolf.world/resource/0.3/character",
            "examples": [
                "https://werewolf.world/resource/0.3/character"
            ]
        },
        "character": {
            "title": "Character List",
            "description": "character list",
            "$id": "/properties/character",
            "type": "array",
            "items": {
                "title": "Character",
                "description": "character",
                "$id": "/properties/character/items",
                "type": "object",
                "properties": {
                    "@id": {
                        "$ref": "https://werewolf.world/village/schema/0.3/character.json#@id"
                    },
                    "name": {
                        "$ref": "https://werewolf.world/village/schema/0.3/character.json#name"
                    },
                    "fullName": {
                        "$ref": "https://werewolf.world/village/schema/0.3/character.json#fullName"
                    },
                    "gender": {
                        "$ref": "https://werewolf.world/village/schema/0.3/character.json#gender"
                    },
                    "image": {
                        "$ref": "https://werewolf.world/village/schema/0.3/character.json#image"
                    }
                },
                "required": [
                    "@id",
                    "name",
                    "fullName",
                    "gender",
                    "image"
                ]
            }
        }
    },
    "required": [
        "@context",
        "@id",
        "character"
    ]
}