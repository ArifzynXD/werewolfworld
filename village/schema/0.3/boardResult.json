{
    "title": "werewolf.world: Schema of board.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://werewolf.world/village/schema/0.3/boardResult.json",
    "definitions": {
        "@context": {
            "title": "Board Result @context",
            "description": "board result @context",
            "$id": "#@context",
            "type": "string",
            "pattern": "^https://werewolf.world/village/context/0.3/boardResult.jsonld$",
            "default": "https://werewolf.world/village/context/0.3/boardResult.jsonld",
            "examples": [
                "https://werewolf.world/village/context/0.3/boardResult.jsonld"
            ]
        },
        "@id": {
            "title": "Board Result @id",
            "description": "board result @id",
            "$id": "#@id",
            "type": "string",
            "pattern": "^https://licos.online/state/0.3/village#[1-9][0-9]*/role#(hunter|madman|mason|master|medium|seer|villager|werehamster|werewolf)/board#([1-9]|1[0-5])$",
            "examples": [
                "https://licos.online/state/0.3/village#3/role#villager/board#1"
            ]
        },
        "polarity": {
            "title": "Board Result Polarity",
            "description": "board result polarity",
            "$id": "#polarity",
            "type": "string",
            "enum": [
                "positive",
                "negative",
                "?",
                "Δ",
                "O",
                "X"
            ],
            "examples": [
                "positive",
                "negative",
                "?",
                "Δ",
                "O",
                "X"
            ]
        }
    }
}