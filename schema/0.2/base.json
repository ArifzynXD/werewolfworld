{
    "title": "werewolf.world: Schema of base.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://werewolf.world/schema/0.2/base.json",
    "definitions": {
        "@context": {
            "title": "@context",
            "description": "@context",
            "$id": "/definitions/@context",
            "type": "array",
            "items": {
                "title": "URL of @context File",
                "description": "URL of @context file",
                "$id": "/definitions/@context/items",
                "type": "string",
                "enum": [
                    "https://werewolf.world/context/0.2/base.jsonld",
                    "https://werewolf.world/context/0.2/error.jsonld",
                    "https://werewolf.world/context/0.2/agent.jsonld",
                    "https://werewolf.world/context/0.2/role.jsonld",
                    "https://werewolf.world/context/0.2/board.jsonld",
                    "https://werewolf.world/context/0.2/chat.jsonld",
                    "https://werewolf.world/context/0.2/vote.jsonld",
                    "https://werewolf.world/context/0.2/votingResult.jsonld",
                    "https://werewolf.world/context/0.2/scroll.jsonld"
                ],
                "examples": [
                    "https://werewolf.world/context/0.2/base.jsonld",
                    "https://werewolf.world/context/0.2/error.jsonld",
                    "https://werewolf.world/context/0.2/agent.jsonld",
                    "https://werewolf.world/context/0.2/role.jsonld",
                    "https://werewolf.world/context/0.2/board.jsonld",
                    "https://werewolf.world/context/0.2/chat.jsonld",
                    "https://werewolf.world/context/0.2/vote.jsonld",
                    "https://werewolf.world/context/0.2/votingResult.jsonld",
                    "https://werewolf.world/context/0.2/scroll.jsonld"
                ]
            }
        },
        "@id": {
            "title": "@id",
            "description": "@id",
            "$id": "/definitions/@id",
            "type": "string",
            "enum": [
                "https://werewolf.world/resource/0.2/boardMessage",
                "https://werewolf.world/resource/0.2/errorMessage",
                "https://werewolf.world/resource/0.2/playerMessage",
                "https://werewolf.world/resource/0.2/scrollMessage",
                "https://werewolf.world/resource/0.2/systemMessage",
                "https://werewolf.world/resource/0.2/voteMessage"
            ],
            "examples": [
                "https://werewolf.world/resource/0.2/boardMessage",
                "https://werewolf.world/resource/0.2/errorMessage",
                "https://werewolf.world/resource/0.2/playerMessage",
                "https://werewolf.world/resource/0.2/scrollMessage",
                "https://werewolf.world/resource/0.2/systemMessage",
                "https://werewolf.world/resource/0.2/voteMessage"
            ]
        },
        "village": {
            "title": "Village",
            "description": "village",
            "$id": "/definitions/village",
            "type": "object",
            "properties": {
                "id": {
                    "title": "Village ID",
                    "description": "village ID",
                    "$id": "/definitions/village/properties/id",
                    "type": "integer",
                    "minimum": 0,
                    "examples": [
                        1
                    ]
                },
                "name": {
                    "title": "Village Name",
                    "description": "village name",
                    "$id": "/definitions/village/properties/name",
                    "type": "string",
                    "minLength": 5,
                    "maxLength": 30
                },
                "totalNumberOfAgents": {
                    "title": "The Total Number of Agents in Village",
                    "description": "the total number of agents in village",
                    "$id": "/definitions/village/properties/totalNumberOfAgents",
                    "type": "integer",
                    "minimum": 4,
                    "maximum": 15,
                    "examples": [
                        15
                    ]
                }
            },
            "required": [
                "id",
                "name",
                "totalNumberOfAgents"
            ]
        },
        "token": {
            "$ref": "https://werewolf.world/schema/0.2/avatar.json"
        },
        "phase": {
            "$ref": "https://werewolf.world/schema/0.2/time.json"
        },
        "date": {
            "$ref": "https://werewolf.world/schema/0.2/time.json"
        },
        "phaseTimeLimit": {
            "title": "Phase Time Limit",
            "description": "phase time limit",
            "$id": "/definitions/phaseTimeLimit",
            "type": "integer",
            "minimum": -1,
            "examples": [
                -1
            ]
        },
        "phaseStartTime": {
            "title": "Phase Start Time",
            "description": "phase start time",
            "$id": "/definitions/phaseStartTime",
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}.[0-9]{3}(\\+[0-9]{2}:[0-9]{2}|Z)$",
            "examples": [
                "2006-10-07T12:06:56.568+09:00"
            ]
        },
        "serverTimestamp": {
            "title": "Server Timestamp",
            "description": "server timestamp",
            "$id": "/definitions/serverTimestamp",
            "type": "string",
            "pattern": "",
            "examples": [
                "2006-10-07T12:06:56.568+09:00"
            ]
        },
        "clientTimestamp": {
            "title": "Client Timestamp",
            "description": "client timestamp",
            "$id": "/definitions/clientTimestamp",
            "type": "string",
            "pattern": "",
            "examples": [
                "2006-10-07T12:06:56.568+09:00"
            ]
        },
        "directionality": {
            "title": "Directionality",
            "description": "directionality",
            "$id": "/definitions/directionality",
            "type": "string",
            "enum": [
                "client to server",
                "server to client"
            ],
            "examples": [
                "client to server",
                "server to client"
            ]
        },
        "intensionalDisclosureRange": {
            "title": "Intensional Disclosure Range",
            "description": "intensional disclosure range",
            "$id": "/definitions/intensionalDisclosureRange",
            "type": "string",
            "enum": [
                "public",
                "private",
                "werewolf",
                "seer",
                "hunter",
                "master",
                "grave",
                "onymousAudience",
                "anonymousAudience"
            ],
            "examples": [
                "public",
                "private",
                "werewolf",
                "seer",
                "hunter",
                "master",
                "grave",
                "onymousAudience",
                "anonymousAudience"
            ]
        },
        "extensionalDisclosureRange": {
            "title": "Extensional Disclosure Range",
            "description": "extensional disclosure range",
            "$id": "/definitions/extensionalDisclosureRange",
            "type": "array",
            "items": {
                "title": "Agent",
                "description": "agent",
                "$id": "/definitions/extensionalDisclosureRange/items/agent",
                "type": "object",
                "properties": {
                    "@id": {
                        "$ref": "https://werewolf.world/schema/0.2/agent.json"
                    },
                    "name": {
                        "$ref": "https://werewolf.world/schema/0.2/agent.json"
                    },
                    "image": {
                        "$ref": "https://werewolf.world/schema/0.2/agent.json"
                    },
                    "id": {
                        "$ref": "https://werewolf.world/schema/0.2/agent.json"
                    },
                    "role": {
                        "title": "Agent Role",
                        "description": "agent role",
                        "$id": "/definitions/extensionalDisclosureRange/items/properties/role",
                        "type": "object",
                        "properties": {
                            "@id": {
                                "$ref": "https://werewolf.world/schema/0.2/role.json"
                            },
                            "name": {
                                "$ref": "https://werewolf.world/schema/0.2/role.json"
                            },
                            "image": {
                                "$ref": "https://werewolf.world/schema/0.2/role.json"
                            }
                        },
                        "required": [
                            "@id",
                            "name",
                            "image"
                        ]
                    },
                    "status": {
                        "$ref": "https://werewolf.world/schema/0.2/agent.json"
                    }
                },
                "required": [
                    "@id",
                    "name",
                    "image",
                    "id",
                    "role",
                    "status"
                ]
            }
        },
        "avatar": {
            "title": "Avatar",
            "description": "avatar",
            "$id": "/properties/avatar",
            "type": "object",
            "properties": {
                "token": {
                    "$ref": "https://werewolf.world/schema/0.2/avatar.json"
                },
                "name": {
                    "$ref": "https://werewolf.world/schema/0.2/avatar.json"
                },
                "image": {
                    "$ref": "https://werewolf.world/schema/0.2/avatar.json"
                }
            },
            "required": [
                "token",
                "name",
                "image"
            ]
        },
        "myAgent": {
            "title": "My Agent",
            "description": "my agent",
            "$id": "/properties/myAgent",
            "type": "object",
            "properties": {
                "@id": {
                    "$ref": "https://werewolf.world/schema/0.2/agent.json"
                },
                "id": {
                    "$ref": "https://werewolf.world/schema/0.2/agent.json"
                },
                "name": {
                    "$ref": "https://werewolf.world/schema/0.2/agent.json"
                },
                "image": {
                    "$ref": "https://werewolf.world/schema/0.2/agent.json"
                },
                "role": {
                    "title": "My Agent Role",
                    "description": "my agent role",
                    "$id": "/properties/myAgent/role",
                    "type": "object",
                    "properties": {
                        "@id": {
                            "$ref": "https://werewolf.world/schema/0.2/role.json"
                        },
                        "name": {
                            "$ref": "https://werewolf.world/schema/0.2/role.json"
                        },
                        "image": {
                            "$ref": "https://werewolf.world/schema/0.2/role.json"
                        }
                    },
                    "required": [
                        "@id",
                        "name",
                        "image"
                    ]
                }
            },
            "required": [
                "@id",
                "id",
                "name",
                "image",
                "role"
            ]
        }
    }
}